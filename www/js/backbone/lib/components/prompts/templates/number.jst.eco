<form>
  <h3 class="hide-accessible"><%= @displayLabel %></h3>
  <label for="<%= @id %>" class="inset-block"><%= @promptText %></label>
  <button class="increment"><span class="icon icon-up"></span></button>
  <input name="<%= @id %>" type="text" value="<%= @currentValue %>"/>
  <button class="decrement"><span class="icon icon-down"></span></button>
</form>
