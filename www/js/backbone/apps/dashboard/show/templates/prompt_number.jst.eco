<legend>
  <form>
  <h3><%= @displayLabel %></h3>
  <label for="<%= @id %>"><%= @promptText %></label><br />
  <button class="increment"><span class="icon icon-up"></span></button>
  <input name="<%= @id %>" type="text" value="<%= @default %>"/>
  <button class="decrement"><span class="icon icon-down"></span></button>
  <% if @skippable: %>
  <button><%= @skipLabel %></button>
  <% end %>
  <button type="submit">Submit</button>
  </form>
</legend>